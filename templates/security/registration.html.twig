{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': 'Nom utilisateur ...'} }) }}
    {{ form_row(form.mail, {'label': 'Adresse mail','attr': {'placeholder': 'Adresse email ...'} }) }}
    {{ form_row(form.password, {'label': 'Mot de passe','attr': {'placeholder': 'Mot de passe ...'} }) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe',
        'attr': {'placeholder': 'Répétez votre mot de passe ...'} }) }}

    <button type="submit" class="button">Valider</button>
    {{ form_end(form) }}

    <div>
        <a class="button" href="{{ path('adept_home') }}" >J'ai déjà un compte</a>
    </div>
{% endblock %}
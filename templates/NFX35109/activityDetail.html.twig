{% extends 'base.html.twig' %}
{% block body %}
    <div class="fixe_largeur_90">
    {{ form_start(form) }}
        <div>
            <div class="row">
                <h1>{% trans %}Repérer{% endtrans %}</h1>
                <h1>></h1>
                <h1>{% trans %}Hiérarchiser{% endtrans %}</h1>
                <h1>></h1>
                <h1 class="mauve">{% trans %}Évaluer{% endtrans %}</h1>
            </div>
            <h1>{% trans %}Manutention Manuelle de charge - Situation{% endtrans %}</h1>
            <div class="container_input">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <h2>{% trans %}Situation :{% endtrans %}</h2>
                        <div class="row" id="situation_nom">
                            <p class="text_margin_right">{% trans %}Nom{% endtrans %}</p>
                            {{ form_widget(form.nom, {'attr': {'class': 'form_control_60', 'placeholder': 'Ex: Préciser...'}} ) }}
                        </div>
                        <div class="row">
                            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Correspond à la tâche réalisée, les procédures, l'exigence qualité, ...">
                                <img src="/images/help2.png" alt="icon help quoi" id="icon_help_quoi" class="icon_click_margin_right" type="button">
                            </span>

                            <p class="text_margin_right">{% trans %}Quoi ?{% endtrans %}</p>
                            <p id="indications_quoi" class="mauve">Correspond à la tâche réalisée, les procédures, l'exigence qualité, ...</p>
                            {{ form_widget(form.quoi, {'attr': {'class': 'form_control_60', 'placeholder': 'Ex: Préciser...'}} ) }}
                        </div>
                        <div class="row">
                            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Tout élément concernant le cycle de travail, la répartition des tâches, le cycle d'autonomie, l'enchaînement, la prise d'information, le contrôle sur le travail, ...">
                                <img src="/images/help2.png" alt="icon help comment" id="icon_help_comment" class="icon_click_margin_right">
                            </span>

                            <p class="text_margin_right">{% trans %}Comment ?{% endtrans %}</p>
                            <p id="indications_comment" class="mauve">Tout élément concernant le cycle de travail, la répartition des tâches, le cycle d'autonomie, l'enchaînement, la prise d'information, le contrôle sur le travail, ...</p>
                            {{ form_widget(form.comment, {'attr': {'class': 'form_control_60', 'placeholder': 'Ex: Préciser...'}} ) }}
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 hr_left">
                        <div class="row">
                            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Tout élément concernant le collectif de travail, l'entraide, les échanges, ...">
                                <img src="/images/help2.png" alt="icon help avec qui" id="icon_help_avec_qui" class="icon_click_margin_right">
                            </span>

                            <p class="text_margin_right">{% trans %}Avec qui ?{% endtrans %}</p>
                            <p id="indications_avec_qui" class="mauve">Tout élément concernant le collectif de travail, l'entraide, les échanges, ...</p>
                            {{ form_widget(form.avec_qui, {'attr': {'class': 'form_control_60', 'placeholder': 'Ex: Préciser...'}} ) }}
                        </div>
                        <div class="row">
                            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Tout élément concernant la machine, l'outil, la technicité, la fiabilité, la matière 1ère, le réglage, l'usure, le risque machine produit, les EPI, ...">
                                <img src="/images/help2.png" alt="icon help avec quoi" id="icon_help_avec_quoi" class="icon_click_margin_right">
                            </span>

                            <p class="text_margin_right">{% trans %}Avec quoi ?{% endtrans %}</p>
                            <p id="indications_avec_quoi" class="mauve">Tout élément concernant la machine, l'outil, la technicité, la fiabilité, la matière 1ère, le réglage, l'usure, le risque machine produit, les EPI, ...</p>
                            {{ form_widget(form.avec_quoi, {'attr': {'class': 'form_control_60', 'placeholder': 'Ex: Préciser...'}} ) }}
                        </div>
                        <div class="row">
                            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Tout élément concernant le délai, le rythme, la cadence, les horaires, les pauses, ...">
                                <img src="/images/help2.png" alt="icon help dimension temporelle" id="icon_help_dimension_temporelle" class="icon_click_margin_right">
                            </span>

                            <p class="text_margin_right">{% trans %}Dimension temporelle{% endtrans %}</p>
                            <p id="indications_dimension_temporelle" class="mauve">Tout élément concernant le délai, le rythme, la cadence, les horaires, les pauses, ...</p>
                            {{ form_widget(form.dimension_temporelle, {'attr': {'class': 'form_control_60', 'placeholder': 'Ex: Préciser...'}} ) }}
                        </div>
                    </div>
                </div>
                <p class="text_margin_right">{% trans %}Autre :{% endtrans %}</p>
                {{ form_widget(form.autre, {'attr': {'class': 'text_area_80'}} ) }}
            </div>
        </div>
        <script>
            document.getElementById("situation_nom").style.display = "none";
            document.getElementById("indications_quoi").style.display = "none";
            document.getElementById("indications_comment").style.display = "none";
            document.getElementById("indications_avec_qui").style.display = "none";
            document.getElementById("indications_avec_quoi").style.display = "none";
            document.getElementById("indications_dimension_temporelle").style.display = "none";

            function displayQuoi() {
                if(document.getElementById("indications_quoi").style.display == "none") {
                    document.getElementById("indications_quoi").style.display = "block";
                } else {
                    document.getElementById("indications_quoi").style.display = "none";
                }
            }
            document.getElementById('icon_help_quoi').addEventListener('click', displayQuoi);

            function displayComment() {
                if(document.getElementById("indications_comment").style.display == "none") {
                    document.getElementById("indications_comment").style.display = "block";
                } else {
                    document.getElementById("indications_comment").style.display = "none";
                }
            }
            document.getElementById('icon_help_comment').addEventListener('click', displayComment);

            function displayAvecQui() {
                if(document.getElementById("indications_avec_qui").style.display == "none") {
                    document.getElementById("indications_avec_qui").style.display = "block";
                } else {
                    document.getElementById("indications_avec_qui").style.display = "none";
                }
            }
            document.getElementById('icon_help_avec_qui').addEventListener('click', displayAvecQui);

            function displayAvecQuoi() {
                if(document.getElementById("indications_avec_quoi").style.display == "none") {
                    document.getElementById("indications_avec_quoi").style.display = "block";
                } else {
                    document.getElementById("indications_avec_quoi").style.display = "none";
                }
            }
            document.getElementById('icon_help_avec_quoi').addEventListener('click', displayAvecQuoi);

            function displayDimensionTemporelle() {
                if(document.getElementById("indications_dimension_temporelle").style.display == "none") {
                    document.getElementById("indications_dimension_temporelle").style.display = "block";
                } else {
                    document.getElementById("indications_dimension_temporelle").style.display = "none";
                }
            }
            document.getElementById('icon_help_dimension_temporelle').addEventListener('click', displayDimensionTemporelle);
        </script>
        <div class="group_button">
            <a class="button3_left" href="{{ path('adept_NFX35109_operator',  { 'id': idEvaluation }) }}" >{% trans %}Annuler{% endtrans %}</a>
            <button type="submit" class="button3_right" >{% trans %}Continuer{% endtrans %}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
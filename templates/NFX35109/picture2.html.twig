        </a>
        {{ form_end(form) }}
        <div class="group_button">
            <a class="button3_left" href="{{ path('adept_NFX35109_activity',  { 'id': id }) }}" >{% trans %}Retour{% endtrans %}</a>
            <a class="button3_right" href="{{ path('adept_NFX35109_operator',  { 'id': id }) }}" >Poursuivre</a>
        </div>
    </div>
{% endblock %}
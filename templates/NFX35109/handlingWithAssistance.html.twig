{% extends 'base.html.twig' %}
{% block body %}
    <div class="fixe_largeur_90">
        <div class="row">
            <h1>Repérer</h1>
            <h1>></h1>
            <h1>Hiérarchiser</h1>
            <h1>></h1>
            <h1 class="mauve">Évaluer</h1>
        </div>
        <div>
            <h1>Manutention Manuelle de charge - Manutention manuelle avec aide à la manutention</h1>
            <p>Tableau récapitulatif des charges :</p>
            <table class="table table-striped table-hover table-light">
                <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Type manutention</th>
                        <th scope="col">Masse (kg)</th>
                        <th scope="col">Force initiale (en daN)</th>
                        <th scope="col">Force de maintien(en daN)</th>
                        <th scope="col">Fréquence</th>
                        <!--<th scope="col">Nb charge similaire</th>-->
                        <th scope="col" colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for charge in charges %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>
                            {{ charge.PTManutentionType | capitalize  }}
                        </td>
                        <td>
                            {{ charge.poidsCharge }}
                        </td>
                        <td>
                            {{ charge.forceInitiale }}
                        </td>
                        <td>
                            {{ charge.forceMaintien }}
                        </td>
                        <td>
                            {{ charge.PTFrequence }}
                        </td>
                        <td>
                            <a class="navbar-brand" href="{{ path('adept_NFX35109_handling_with_assistance_edit_charge', { 'id': idEvaluation, 'id2': charge.id }) }}">
                                <img src="/images/edit.png" alt="icon editer" id="icon_edit" class="icon_click">
                            </a>
                        </td>
                        <td>
                            <a class="navbar-brand" href="{{ path('adept_NFX35109_handling_with_assistance_delete_charge', { 'id': idEvaluation, 'id2': charge.id }) }}">
                                <img src="/images/delete.png" alt="icon supprimer" id="icon_delete" class="icon_click">
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                    <tr>
                        <td colspan="11">
                            <a class="a_adept center" href="{{ path('adept_NFX35109_handling_with_assistance_charge_type',  { 'id': idEvaluation }) }}" >Ajouter un pousser/tirer</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="group_button">
            <a class="button3_left" href="{{ path('adept_NFX35109_manutention_type',  { 'id': idEvaluation }) }}" >Revenir en arrière</a>
            {% if charges | length == 0 %}
                <a id="button_continue" class="button_adept_inactif">Continuer</a>
            {% else %}
                <a id="button_continue" class="button3_right" href="{{ path('adept_NFX35109_handling_with_assistance_constraints',  { 'id': idEvaluation }) }}" >Continuer</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
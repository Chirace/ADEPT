{% extends 'base.html.twig' %}
{% block body %}
    <div class="fixe_largeur_90">
        <div>
            <h1>Manutention Manuelle de charge - Bilan de la Manutention Manuelle sans aide à la manutention</h1>
            <hr>
            <table class="table table-striped table-hover table-light">
                <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Masse (kg)</th>
                        <th scope="col">Coefficient 1</th>
                        <th scope="col">Coefficient 2</th>
                        <th scope="col">Masse corrigée (en kg)</th>
                        <th scope="col">Détails</th>
                    </tr>
                </thead>
                <tbody>
                    {% for charge in charges %}
                    <tr>
                        <th scope="row"></th>
                        <td>
                            {{ charge.poidsCharge }}
                        </td>
                        <td>
                            Contraintes exécution : 0.7
                        </td>
                        <td>
                            Contraintes environnement : 0.7
                        </td>
                        <td>
                            7.3
                        </td>
                        <td scope="col">
                            <a href="{{ path('adept_NFX35109_handling_without_assistance_resume_charge',  { 'id': idEvaluation, 'id2': charge.id }) }}">
                                <img src="/images/icon_loupe.png" class="icon_click" alt="icon loupe" id="icon_loupe_1">
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="group_button">
            <a class="button3_left" href="{{ path('adept_NFX35109_handling_without_assistance_constraints',  { 'id': idEvaluation }) }}" >Revenir en arrière</a>
            <a class="button3_right" href="{{ path('adept_menu') }}" >Retour au menu principal</a>
        </div>
    </div>
{% endblock %}